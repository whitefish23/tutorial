      <div class="contacts__content">
        <div class="contacts__info">
          <div class="contBlock">
            <div class="contBlock__icon">
              <img src="@assets/icon/location.svg" alt="">
            </div>
            <div class="contBlock__info">
              <div class="contBlock__title">АДРЕС</div>
              <div class="contBlock__title-sub">г. Москва, ул. Московская, 56</div>
            </div>
          </div>
          <div class="contBlock">
            <div class="contBlock__icon">
              <img src="@assets/icon/phoneCont.svg" alt="">
            </div>
            <div class="contBlock__info">
              <div class="contBlock__title">ТЕЛЕФОН</div>
              <div class="contBlock__title-sub">7 (495) 450-600</div>
              <div class="contBlock__dsc">7 (901) 341- 54-30</div>
            </div>
          </div>
          <div class="contBlock">
            <div class="contBlock__icon">
              <img src="@assets/icon/email.svg" alt="">
            </div>
            <div class="contBlock__info">
              <div class="contBlock__title">E-MAIL</div>
              <div class="contBlock__title-sub">info@oishi-sushi.ru</div>
            </div>
          </div>
          <div class="contBlock">
            <div class="contBlock__icon">
              <img src="@assets/icon/time.svg" alt="">
