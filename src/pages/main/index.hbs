<section class="baner">
  <div class="container">
    <div class="baner__main">
      <div class="baner__offer">
        <div class="baner__title">
          Быстрая доставка вкусной японской еды
        </div>
        <button class="baner__btn">
          Посмотреть меню
        </button>
      </div>
      <div class="baner__slider-section">
        <div class="swiper baner-slider">
          <div class="swiper-wrapper">
            <div class="swiper-slide baner-slide">
              <div class="baner__img-box">
                <img src="@assets/img/maki.png" alt="">
              </div>
              <div class="baner__content">
                <div class="baner__slider-title">
                  Ролл
                </div>
                <div class="baner__slider-name">
                  Maki
                </div>
                <div class="baner__slider-discription">
                  Лосось, рис, салат, кунжут, нори
                </div>
                <div class="baner__info">
                  <div class="baner__price">
                    320 Р
                  </div>
                  <img src="@assets/icon/rectangle.svg" alt="">
                  <div class="baner__weight">
                    260 гр / 6 шт.
                  </div>
                </div>
                <div class="baner__btn-add">
                  
                  <div class="counter" data-coun>
                    <img src="@assets/icon/plus.svg" alt="" class="counter__button counter__butPlus">
                    <input type="text" disabled value="1" class="input">
                    <img src="@assets/icon/minus.svg" alt="" class="counter__button counter__butMinus">
                  </div>
                  <div class="baner__btn-white">
                    Добавить к заказу
                    <img src="@assets/icon/basket.svg" alt="" class="baner__basket">
                  </div>
                </div>
              </div>
            </div>
            <div class="swiper-slide baner-slide">
              <div class="baner__img-box">
                <img src="@assets/img/maki.png" alt="">
              </div>
              <div class="baner__content">
                <div class="baner__slider-title">
                  Суп
                </div>
                <div class="baner__slider-name">
                  Мисо
                </div>
                <div class="baner__slider-discription">
                  Сыр тофу, вакаме, паста мисо
                </div>
                <div class="baner__info">
                  <div class="baner__price">
                    400 Р
                  </div>
                  <img src="@assets/icon/rectangle.svg" alt="">
                  <div class="baner__weight">
                    350 гр
                  </div>
                </div>
                <div class="baner__btn-add">
                  <div class="baner__btn-bg"></div>
                  <div class="baner__btn-setting">
                    <div class="baner__btn-plus">
                      <img src="@assets/icon/plus.svg" alt="">
                    </div>
                    <div class="baner__counter">1</div>
                    <div class="baner__btn-minus">
                      <img src="@assets/icon/minus.svg" alt="">
                    </div>
                  </div>
                  <div class="baner__btn-white">
                    Добавить к заказу
                    <img src="@assets/icon/basket.svg" alt="" class="baner__basket">
                  </div>
                </div>
              </div>
            </div>

            <div class="swiper-slide baner-slide">
              <div class="baner__img-box">
                <img src="@assets/img/maki.png" alt="">
              </div>
              <div class="baner__content">
                <div class="baner__slider-title">
                  Ролл
                </div>
                <div class="baner__slider-name">
                  Филадельфия
                </div>
                <div class="baner__slider-discription">
                  Рис, лосось, сыр филадельфия, нори
                </div>
                <div class="baner__info">
                  <div class="baner__price">
                    320 Р
                  </div>
                  <img src="@assets/icon/rectangle.svg" alt="">
                  <div class="baner__weight">
                    260 гр / 6 шт.
                  </div>
                </div>
                <div class="baner__btn-add">
                  <div class="baner__btn-bg"></div>
                  <div class="baner__btn-setting">
                    <div class="baner__btn-plus">
                      <img src="@assets/icon/plus.svg" alt="">
                    </div>
                    <div class="baner__counter">1</div>
                    <div class="baner__btn-minus">
                      <img src="@assets/icon/minus.svg" alt="">
                    </div>
                  </div>
                  <div class="baner__btn-white">
                    Добавить к заказу
                    <img src="@assets/icon/basket.svg" alt="" class="baner__basket">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="swiper-pagination pagination-baner"></div>
        </div>
      </div>
    </div>
  </div>
</section>

